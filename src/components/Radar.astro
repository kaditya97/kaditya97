          blip.setAttribute("data-name", tech.name);
          blip.setAttribute("data-index", index);
          blip.style.left = `${pos.x - 18}px`;
          blip.style.top = `${pos.y - 18}px`;
          blip.innerHTML = tech.icon;

          blip.addEventListener("click", () =>
            handleUserInteraction(tech, blip, index)
          );

          radar.appendChild(blip);
          blipElements.push(blip);
        });
      }

