    <style>
      @keyframes scan {
        0% {
          transform: rotate(0deg);
        }
        100% {
          transform: rotate(360deg);
        }
      }

      @keyframes pulse-ring {
        0% {
          transform: translate(-50%, -50%) scale(0.3);
          opacity: 0.8;
          border-width: 3px;
        }
        100% {
          transform: translate(-50%, -50%) scale(1);
          opacity: 0;
          border-width: 1px;
        }
      }

      @keyframes blip-glow {
        0%,
        100% {
          filter: drop-shadow(0 0 4px currentColor);
        }
        50% {
          filter: drop-shadow(0 0 12px currentColor);
        }
      }

      @keyframes fadeIn {
        from {
          opacity: 0;
          transform: translateY(10px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      .radar-container {
        position: relative;
        width: 600px;
        height: 600px;
        background: radial-gradient(
          circle,
          rgba(0, 50, 30, 0.3) 0%,
          rgba(0, 20, 10, 0.8) 100%
        );
        border-radius: 50%;
        overflow: hidden;
      }

      .radar-center {
        position: absolute;
        width: 12px;
        height: 12px;
        background: #00ff88;
        border-radius: 50%;
        left: 50%;
        top: 50%;
        transform: translate(-50%, -50%);
        box-shadow: 0 0 20px #00ff88, 0 0 40px #00ff8855;
        z-index: 5;
      }

      .scanner {
        position: absolute;
        width: 50%;
        height: 4px;
        left: 50%;
        top: 50%;
        transform-origin: left center;
        animation: scan 4s linear infinite;
        z-index: 4;
      }

      .scanner::after {
        content: "";
        position: absolute;
        width: 100%;
        height: 300px;
        left: 0;
        top: -150px;

        /* Light falloff */
        background: linear-gradient(
          to bottom,
          rgba(0, 255, 136, 0.2),
          rgba(0, 255, 136, 0.05),
          transparent
        );

        /* Cone shape */
        clip-path: polygon(
          0 50%,
          /* tip */ 100% 0,
          /* top far edge */ 100% 100% /* bottom far edge */
        );

        transform-origin: left center;
        pointer-events: none;
      }

      .pulse-ring {
        position: absolute;
        border: 2px solid rgba(0, 255, 136, 0.6);
        border-radius: 50%;
        left: 50%;
        top: 50%;
        width: 580px;
        height: 580px;
        transform: translate(-50%, -50%) scale(0.3);
        animation: pulse-ring 3s ease-out infinite;
        pointer-events: none;
      }

      .pulse-ring:nth-child(2) {
        animation-delay: 1s;
      }

      .pulse-ring:nth-child(3) {
        animation-delay: 2s;
      }

      .tech-blip {
        position: absolute;
        width: 36px;
        height: 36px;
        cursor: pointer;
        transition: all 0.3s ease;
        z-index: 10;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 20px;
        border-radius: 50%;
        background: rgba(0, 20, 10, 0.8);
        border: 1px solid rgba(0, 255, 136, 0.3);
      }

      .tech-blip:hover {
        transform: scale(1.3);
        z-index: 20;
        border-color: rgba(0, 255, 136, 0.8);
        box-shadow: 0 0 20px rgba(0, 255, 136, 0.5);
      }

      .tech-blip.active {
        animation: blip-glow 1.5s ease-in-out infinite;
        border-color: #00ff88;
        box-shadow: 0 0 20px rgba(0, 255, 136, 0.8);
      }

      .tech-blip::after {
        content: attr(data-name);
        position: absolute;
        top: 100%;
        left: 50%;
        transform: translateX(-50%);
        white-space: nowrap;
        font-size: 10px;
        color: #00ff88;
        opacity: 0;
        transition: opacity 0.3s;
        padding-top: 6px;
        font-family: system-ui, sans-serif;
      }

      .tech-blip:hover::after {
        opacity: 1;
      }

      .detail-panel {
        animation: fadeIn 0.3s ease-out;
      }

      .grid-line {
        position: absolute;
        background: rgba(0, 255, 136, 0.08);
        left: 50%;
        top: 50%;
      }

      .auto-indicator {
        transition: opacity 0.3s;
      }

      .auto-indicator.paused {
        opacity: 0.5;
      }
    </style>
