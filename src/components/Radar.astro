      // Calculate position for a technology
      function calculatePosition(tech) {
        const ringDist = ringDistances[tech.ring];
        const angle = tech.angle * (Math.PI / 180);

        // Add slight randomness for natural look
        const jitter = (Math.random() - 0.5) * 15;
        const radius = ringDist * maxRadius + jitter;

        const x = centerX + radius * Math.cos(angle);
        const y = centerY + radius * Math.sin(angle);

        return { x, y };
      }

