      }

      // Resume auto-rotation
      function resumeAutoRotate() {
        isAutoRotating = true;
        startAutoRotate();
        updateAutoIndicator();
      }

      // Update the auto-rotate indicator UI
      function updateAutoIndicator() {
        const indicator = document.getElementById("auto-indicator");
        const statusText = document.getElementById("auto-status");
        const toggleBtn = document.getElementById("toggle-auto");
        const pulseDot = document.getElementById("pulse-dot");

        if (isAutoRotating) {
          indicator.classList.remove("paused");
          statusText.textContent = "Auto-rotating";
          toggleBtn.textContent = "Pause";
          pulseDot.classList.add("animate-ping");
        } else {
          indicator.classList.add("paused");
          statusText.textContent = "Paused";
          toggleBtn.textContent = "Resume";
          pulseDot.classList.remove("animate-ping");
        }
      }

      // Toggle auto-rotation manually
      function toggleAutoRotate() {
        if (userInteractionTimeout) {
          clearTimeout(userInteractionTimeout);
          userInteractionTimeout = null;
        }

        if (isAutoRotating) {
          pauseAutoRotate();
        } else {
          resumeAutoRotate();
        }
      }

      // Initialize
      renderBlips();

      // Start with first technology selected
      showDetail(technologies[0], blipElements[0]);

      // Start auto-rotation
      startAutoRotate();

      // Add toggle button listener
      document
        .getElementById("toggle-auto")
        .addEventListener("click", toggleAutoRotate);
    </script>
  </body>
